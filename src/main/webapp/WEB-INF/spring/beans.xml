<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
		
	<!-- Properties file location specific to Jetty deployments. -->
	<context:property-placeholder location="file:${jetty.home}/conf/twittercache.properties"
    	ignore-unresolvable="true" ignore-resource-not-found="true" order="1" />
    
    <!-- Properties file location specific to Tomcat deployments. -->
    <context:property-placeholder location="file:${catalina.home}/conf/twittercache.properties"
    	ignore-unresolvable="true" ignore-resource-not-found="true" order="2" />
    	
   	<!-- The default application properties (packaged with .war). -->
	<context:property-placeholder location="classpath:twittercache.default.properties"
		ignore-unresolvable="true" order="3" />
   	
   	<!-- Bootstrap -->
   	
   	<bean id="TwitterCacheBootstrap"
   		class="com.kolich.twittercache.spring.beans.TwitterCacheBootstrap" />
   	
</beans>